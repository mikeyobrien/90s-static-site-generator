<h2>Recent Posts</h2>

<% posts.forEach(function(post) { %>
<div class="post-entry">
    <h3 class="post-title">
        <a href="<%= post.url %>"><%= post.title %></a>
    </h3>
    <div class="post-meta">
        Posted on <%= new Date(post.date).toLocaleDateString() %> by <%= post.author || site.author %>
    </div>
    <div class="post-excerpt">
        <% if (post.excerpt) { %>
            <%= post.excerpt %>
        <% } else { %>
            <%= post.content.replace(/<[^>]*>/g, '').substring(0, 200) %>...
        <% } %>
    </div>
    <div class="read-more">
        <a href="<%= post.url %>">Continue reading â†’</a>
    </div>
</div>
<% }); %>

<% if (posts.length === 0) { %>
<p>No posts yet. Check back soon!</p>
<% } %>